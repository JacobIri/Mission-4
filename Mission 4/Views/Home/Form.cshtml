
@{
    ViewData["Title"] = "Form";
}

@model Mission_4.Models.FormResponse

<div class="d-flex justify-content-center">
    <h1>Enter a New Movie</h1>
 </div>
<br />
<div class="d-flex justify-content-center">
    <form method="post">
        <div class="form-group">
            <label asp-for="Title">Movie Title: </label>
            <input asp-for="Title" required />
            <br />
        </div>
        <div class="form-group">
            <label asp-for="Year">Year:</label>
            <input asp-for="Year" required />
            <br />
        </div>
        <div class="form-group">
            <label asp-for="Director">Director:</label>
            <input asp-for="Director" required />
            <br />
        </div>
        <div class="form-group">
            <label asp-for="Category">Category:</label>
            <select asp-for="Category" required>
                <option value="Action/Adventure">Action/Adventure</option>
                <option value="Comedy">Comedy</option>
                <option value="Drama">Drama</option>
                <option value="Family">Family</option>
                <option value="Horror/Suspense">Horror/Suspense</option>
                <option value="Miscellaneous">Miscellaneous</option>
                <option value="Television">Television</option>
                <option value="VHS">VHS</option>
            </select>
            <br />
        </div>
        <div class="form-group">
            <label asp-for="Rating">MPAA Rating:</label>
            <select asp-for="Rating" required>
                <option value="NR">NR</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG13">PG-13</option>
                <option value="R">R</option>
            </select>
            <br />
        </div>
        <div class="form-group">
            <label asp-for="Edited">Is this an Edited Version:</label>
            <select asp-for="Edited">
                <option value="false">No</option>
                <option value="true">Yes</option>
            </select>
            <br />
        </div>
        <div class="form-group">
            <label asp-for="LentTo">Lent movie to:</label>
            <input asp-for="LentTo" />
            <br />
        </div>
        <div class="form-group">
            <label asp-for="Notes">Additional Notes:</label>
            <input asp-for="Notes" maxlength="25"/>
            <br />
        </div>
        <button type="submit" class="btn btn-outline-light btn-large">Submit Movie</button>
    </form>
</div>